<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:minHeight="50dp"
    android:maxHeight="50dp"
    android:background="@drawable/reward_row_background"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:padding="10dp">
        <TextView
            android:textAlignment="center"
            android:text="150"
            android:textSize="18dp"
            android:id="@+id/reward_list_row_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#CFDBC5"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/item_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1">



        <TextView
            android:textAlignment="center"
            android:text="Hello world"
            android:textSize="20dp"
            android:id="@+id/reward_list_row_text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:textColor="#fff"/>


    </LinearLayout>


    <Button
        android:text="Claim"
        android:id="@+id/reward_done"
        android:textColor="#fff"
        android:layout_width="75dp"
        android:layout_height="fill_parent"
        android:background="@drawable/done_button_root"
        android:padding="0dp"/>

</LinearLayout>